<h1>Edit Task</h1>
<form action="/board/tasks/edit" method="post">
   <div class="form-group">
      <label for="name">Name</label>
      <input name="name" type="text" class="form-control" id="name" value="{{task.name}}">    
   </div>
    <div class="form-group">
      <label for="content">Content</label>
      <input name="content" type="text" class="form-control" id="content" value="{{task.content}}">    
   </div>
     <div class="form-group">
      <label for="details">Details</label>
      <input name="details" type="text" class="form-control" id="details" value="{{task.details}}">    
   </div>
      <div class="form-group">
      <label for="deadline">Deadline</label>
      <input name="deadline" type="text" class="form-control" id="deadline" value="{{task.deadline}}">    
   </div> 
   <button type="submit" class="btn btn-primary">Submit</button>
</form>